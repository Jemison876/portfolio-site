<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<div id="content-wrapper">
    <section class="full-height">
        <div class="container">

            <!--Content for Add page-->
            <div class="container">
                <div class="row">
                    <div class="offset-md-3 col-md-6">
                        <h1><%= title%></h1>
                        <form class="form" method = "POST">
                            <div class="form-group text-brand">
                                <label for="nameTextField">Contact Name</label>
                                <input type="text" class="form-control"
                                id="nameTextField"
                                placeholder="Enter the Contact Name"
                                name="name" required>
                            </div>
                            <br>

                            <div class="form-group text-brand">
                                <label for="phoneNumberTextField">Contact Number</label>
                                <input type="text" class="form-control"
                                id="phoneNumberTextField"
                                placeholder="Enter the Contact Number"
                                name="phoneNumber" required>
                            </div>
                            <br>

                            <div class="form-group text-brand">
                                <label for="publishedTextField">Contact Email</label>
                                <input type="email" class="form-control"
                                id="emailTextField"
                                placeholder="Enter Contact Email Address"
                                name="email" required>
                            </div>

                            <br>

                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-edit"></i> Submit</button>

                                <a href="/contact-list" class="btn btn-warning">
                                    <i class="fas fa-undo"></i> Cancel</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>

<%- include ('../partials/bottom_nav.ejs') %> 
<%- include ('../partials/footer.ejs') %>